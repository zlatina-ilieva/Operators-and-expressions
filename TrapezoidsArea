/*
Write an expression that calculates trapezoid's area by given sides a and b and height h.
 */

using System;

class TrapezoidArea
{
    static void Main()
    {
        Console.WriteLine("Zadaite strana na trapeca a=:");
        double a = double.Parse(Console.ReadLine());
        Console.WriteLine("Zadaite strana na trapeca b=:");
        double b = double.Parse(Console.ReadLine());
        Console.WriteLine("Zadaite visochina na trapeca h=:");
        double h = double.Parse(Console.ReadLine());
        double s,c;
        c = (a + b) * h;
        s=c/2;
        Console.WriteLine("Liceto na trapeca S={0}", s);
    }
}
