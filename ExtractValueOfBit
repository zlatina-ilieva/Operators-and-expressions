/*
Write an expression that extracts from a given integer i the value of a given bit number b. Example: i=5; b=2 ->ïƒ  value=1.
 */

using System;

class ExtractValueOfBit
{
    static void Main()
    {
        Console.WriteLine("Vyvedete poziciq:");
        int b = int.Parse(Console.ReadLine());
        Console.WriteLine("Vyvedete chislo:");
        int i = int.Parse(Console.ReadLine());
        string binary = Convert.ToString(i, 2);
        int mask = 1 << b;
        int nAndMask = i & mask;
        int bit = nAndMask >> b;  
        Console.WriteLine("Na poziciq {0} v chisloto {1} ({2}) se namira: {3}",b,i,binary,bit); 
    }
}
